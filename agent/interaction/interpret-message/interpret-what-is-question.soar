sp {interpret-message*apply*interpret-what-is-question*create*retrieve-subtasks-of-task
   (state <s> ^name interpret-message
              ^smem <smem>
              ^instructor-message <msg>
              ^operator <o>)
   (<smem> ^result.retrieved <ret>
           ^command <cmd>)
   (<cmd> ^query <q>)
   (<q> ^handle <task-handle>)
   (<ret> ^handle <task-handle>
          ^procedural <proc>)
   (<proc> ^subactions <sub-actions>)
   (<o> ^name interpret-what-is-question
        ^type subtask
        ^task <task-handle>) #fetch1
-->
   (<s> ^new-segment-info <info>
        ^mark-interpreted <msg>)
   (<info> ^purpose <p>
           ^originator instructor)
   (<p> ^type agent-list-subtasks
        ^parameters <params>
        ^satisfaction <sat>)
   (<params> ^type subtask
             ^task <task-handle>
             ^subactions <sub-actions>)
   (<sat> ^dialog-event <de>)
   (<de> ^type explanation
         ^originator agent)
}