# Retrieving general concepts of a game
sp {interpret-message*elaborate*interpret-what-is-question*retrieve-concept-definition
   (state <s> ^name interpret-message
              ^operator <o> +)
   (<o> ^name interpret-what-is-question
        ^message.arg1 <arg1>)
   (<arg1> ^sentence <sentence>)
-->
   (<o> ^gtype <gtype>
        ^<gtype> <val>
        ^sentence <sentence>)
}

# Mobile world
# Retrieving subtasks of tasks
# PR - TODO what if task doesn't exist
# PR - TODO get task name from question
sp {interpret-message*elaborate*interpret-what-is-question*retrieve-subtask
   (state <s> ^name interpret-message
              ^operator <o> +)
   (<o> ^name interpret-what-is-question
        ^message.arg1 <arg1>)
   (<arg1> ^item-type predicate
           ^2 <pred>)
   (<pred> ^2 <task-pred>
           ^handle subtask)
   (<task-pred> ^handle <task-handle>)
-->
   (<o> ^type subtask
        ^task deliver1)
}
