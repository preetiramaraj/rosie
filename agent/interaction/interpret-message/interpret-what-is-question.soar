# OPERATOR APPLICATION
#####

# Don't even need to do any special processing, just create a response
sp {interpret-message*apply*interpret-what-is-question*create*message
   (state <s> ^name interpret-message
              ^instructor-message <msg>
              ^operator <o>)
   (<o> ^name interpret-what-is-question
        ^object <obj>
        -^property
        -^generated)
-->
   (<s> ^new-segment-info <info>
        ^mark-interpreted <msg>)
   (<info> ^purpose <p>
           ^originator instructor)
   (<p> ^type agent-object-description
        ^parameters <params>
        ^satisfaction <sat>)
   (<params> ^object <obj>)
   (<sat> ^dialog-event <de>)
   (<de> ^type explanation
         ^originator agent)
}

sp {interpret-message*apply*interpret-what-is-question*create*message*given-object
   (state <s> ^name interpret-message
              ^instructor-message <msg>
              ^operator <o>)
   (<o> ^name interpret-what-is-question
        ^object <obj>
        ^generated <gen>)
-->
   (<s> ^new-segment-info <info>
        ^mark-interpreted <msg>)
   (<info> ^purpose <p>
           ^originator instructor)
   (<p> ^type agent-object-description
        ^parameters <params>
        ^satisfaction <sat>)
   (<params> ^object <obj>
             ^generated <gen>)
   (<sat> ^dialog-event <de>)
   (<de> ^type explanation
         ^originator agent)
}

